                                </div>
                                <div class="col-md-12">
                                    <label for="">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Confirm Password" />
                                    <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>

                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-pronia-primary register">REGISTER</button>
                                </div>
                                <div class="text-center">
                                    <a class="small"  asp-controller="account" asp-action="login">Already have an account? Login!</a>
                                </div>
                            </div>
                        </div>
                    </form>
