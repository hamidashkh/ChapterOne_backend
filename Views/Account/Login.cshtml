@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<main>
    <section class="title">
        <div>
            <img style="width:100%" src="https://chapterone.qodeinteractive.com/wp-content/uploads/2019/07/pricing-options-title-area-img-1.jpg" alt="">
        </div>

    </section>
    <div class="container pt-4">

        <div class="login-register-area">

            <div class="row">
                 <div class="col-8 m-auto ">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text text-danger"></div>
                <div class="login-form">
                <h4 class="login-title">Login</h4>
                <div class="row">
                <div class="col-lg-12">
                <label asp-for="Email">Email Address*</label>
                  <input asp-for="Email" placeholder="Email Address" />
                  <span asp-validation-for="Email" class="text text-danger"></span>
                </div>
                <div class="col-lg-12">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" placeholder="Password" />
                 <span asp-validation-for="Password" class="text text-danger"></span>

                </div>
                <div class="remme_forgotpass">
                <div class="col-lg-6">
                <div class="check-box">
                <input asp-for="RemindMe" id="remember_me" />
                <label asp-for="RemindMe">Remember me</label>
                </div>
                </div>
                <div class="col-lg-6">
                @*<div class="forgot-password_info">
                <a href="">Forgot Password?</a>
                </div>*@
                </div>
                </div>
                <div class="col-lg-12">
                <button type="submit" class="btn btn-pronia-primary login">LOGIN</button>
                </div>
                 <div class="text-center">
                                    <a class="small" asp-controller="Account" asp-action="Register">Already have an account? Login!</a>
                  </div>
                </div>
                </div>

                </form>
                </div>
                               
            </div>

        </div>
    </div>
</main>
@section Scripts{
    @await Html.PartialAsync("_Validation")
}
