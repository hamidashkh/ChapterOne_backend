@model Product
@{
    ViewData["Title"] = "Delete";
}
<div class="row d-flex justify-content-between"
    <div class="">
        <div class="col-lg-2">
            <h1 class="h3 mb-4  text-gray-800">Product Delete Page</h1>
        </div>
       <div class="col-lg-2">
            <a class="btn btn-primary" asp-action="index" asp-controller="product" asp-area="manage">Back</a>
        </div>
        <div class="col-lg-2">
            <a class="btn btn-danger" asp-action="deleteproduct" asp-controller="product" asp-area="manage" asp-route-id="@Model.Id">Delete</a>
        </div>
    </div>
    <div>
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title">FullName:@Model.Title</h5>
          </div>
        </div>
    </div>
    <div class="col-lg-12 ">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>

                    <th>
                        FullName
                    </th>
                    <th>
                        Created At
                    </th>
                    <th>
                        Created By
                    </th>

                </tr>
            </thead>
            <tbody>
                
                            <tr>
                                <td>@Model.Title</td>
                                <td>@Model.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                                <td>@Model.CreatedBy</td>
                            </tr>
                
            </tbody>
        </table>
    </div>
</div>


