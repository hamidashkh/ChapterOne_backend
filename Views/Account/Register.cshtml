                <div class="col-12 m-auto w-75">
                    <form method="post">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                                <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
                            <div class="row d-block">
                                <div class="col-md-12 ">
                                    <label for="">First Name</label>
                                    <input asp-for="Name" placeholder="First Name" />
                                    <span asp-validation-for="Name" class="text text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label for="">Last Name</label>
                                    <input asp-for="SurName"  placeholder="Last Name" />
                                    <span asp-validation-for="SurName" class="text text-danger"></span>

                                </div>
                                <div class="col-md-12">
                                    <label for="">Father Name</label>
                                    <input asp-for="FatherName"  placeholder="Father Name" />
