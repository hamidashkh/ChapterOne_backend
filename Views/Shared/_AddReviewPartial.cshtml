@model Review
<form id="reviewForm" method="post" asp-controller="product" asp-action="AddReview">
    <input type="hidden" name="ProductId" value="@Model.ProductId"/>
    <div class="row">
        <div class="col-md-6">
            <div class="single-form">
                <label asp-for="Name" ></label>
                <input asp-for="Name" style="border:1px solid" placeholder="Name">
            </div>
        </div>
        <div class="col-md-6">
            <div class="single-form">
                <label asp-for="Email"></label>
                <input asp-for="Email" style="border:1px solid" placeholder="Email">
                <span asp-validation-for="Email" class="text text-danger"></span>
            </div>
        </div>
        <div class="col-md-12">
            <div class="single-form">
                <label asp-for="Description">Your Review:</label>
                <textarea asp-for="Description" placeholder="Write a review"></textarea>
            </div>
        </div>
        <div class="col-md-12">
            <div class="single-form">
                <button class="main-btn">Add Review</button>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @await Html.PartialAsync("_Validation")
                            }
