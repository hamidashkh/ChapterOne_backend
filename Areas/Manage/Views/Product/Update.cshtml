@model Product
@{
    ViewData["Title"] = "Update";
}

<div class="row"
    <div class="col-lg-2">
        <h1 class="h3 mb-4  text-gray-800">Product Update Page</h1>
    </div>

<div class="row mx-auto">
    <div class="col-lg-8">
        <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control">
            <span asp-validation-for="Price" class="text text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DiscountedPrice" class="form-label"></label>
            <input asp-for="DiscountedPrice" class="form-control">
            <span asp-validation-for="DiscountedPrice" class="text text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Count" class="form-label"></label>
            <input asp-for="Count" class="form-control">
            <span asp-validation-for="Count" class="text text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <input style="margin-left: 0" asp-for="IsNewArrival" class="form-check-input">
            <label asp-for="IsNewArrival" class="form-check-label"></label>
            <span asp-validation-for="IsNewArrival" class="text text-danger"></span>
        </div>
        <div class="mb-3 form-check">
            <input style="margin-left: 0" asp-for="IsBestSeller" class="form-check-input">
            <label asp-for="IsBestSeller" class="form-check-label"></label>
            <span asp-validation-for="IsBestSeller" class="text text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label">Default file input example</label>
            <input asp-for="ImageFile" class="form-control" accept="image/jpeg">
            <span asp-validation-for="ImageFile" class="text text-danger"></span>
        </div>


        <div id="parentList">
            <div class="input-group mb-3">
                <select asp-for="AuthorId" class="custom-select" asp-items="new SelectList(ViewBag.Author,nameof(Author.Id), nameof(Author.FullName))">
                </select>
                <span asp-validation-for="AuthorId" class="text text-danger"></span>
            </div>
        </div>
        <div id="parentList">
            <div class="input-group mb-3">
                <select asp-for="CategoryId" class="custom-select" asp-items="new SelectList(ViewBag.Categories,nameof(Category.Id), nameof(Category.Name))">
                </select>
                <span asp-validation-for="CategoryId" class="text text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>

    </div>

</div>
</div>
@section Scripts{
    @await Html.PartialAsync("_Validation")
}
